{
  "compilerOptions": {
    "lib": ["ESNext"],
    "forceConsistentCasingInFileNames": true,
    "module": "CommonJS",
    "moduleResolution": "Node",
    "esModuleInterop": true,
    "outDir": "dist",
    "rootDir": "src",
    "skipLibCheck": true,
    "strict": true,
    "declaration": true,
    "declarationMap": true
  },
  "exclude": ["node_modules/*", "src/tests", "dist"]
}
